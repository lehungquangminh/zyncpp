{
  "name": "zyncpp-monorepo",
  "private": true,
  "version": "0.0.0-development",
  "packageManager": "pnpm@9.0.0",
  "engines": { "node": ">=20" },
  "workspaces": ["packages/*","examples/*"],
  "scripts": {
    "bootstrap": "pnpm -r install && pnpm -r build",
    "build": "pnpm -r run build",
    "lint": "pnpm -r run lint || true",
    "test": "pnpm -r run test || true",
    "package:vsix": "node ./scripts/package-vsix.mjs",
    "ci": "pnpm lint && pnpm build && pnpm test && pnpm package:vsix",
    "prepare": "husky install"
  },
  "devDependencies": {
    "typescript": "^5.5.4",
    "esbuild": "^0.23.0",
    "semantic-release": "^24.0.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^10.0.3",
    "@semantic-release/npm": "^11.0.0",
    "@semantic-release/exec": "^6.0.3",
    "vsce": "^2.15.0",
    "ovsx": "^0.9.2",
    "husky": "^9.0.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.3.3"
  }
}


